{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/uni-weighting-year.schema.json",
    "title": "University Grade Weighting Calculator",
    "type": "object",
    "properties": {
        "name": {
            "description": "The display name of the calculator module",
            "type": "string"
        },
        "years": {
            "description": "Array of all of the university years in this module",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "year": {
                        "type": "integer",
                        "description": "The numeric year out of the degree that this is",
                        "minimum": 1
                    },
                    "modules": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "properties": {

                            }
                        }
                    }
                }
            },
            "minItems": 1,
            "uniqueItems": true
        }
    }
}